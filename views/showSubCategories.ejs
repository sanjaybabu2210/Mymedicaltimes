<style>
  @charset "UTF-8";
:root {
  --var-padding: 1em;
  --highlight: hsl(230, 38%, 46%);
  --highlight-dark: hsl(230, 38%, 36%);
  --logo-width: 6em;
  --logo-offset: 1em;
  --main-column-width: 17em;
}

* {
  box-sizing: border-box;
}
*::before, *::after {
  border-box: inherit;
}

.app {
  position: relative;
  padding-left: .5em;
  max-width: 60em;
  background: #acbbd7 100% -webkit-gradient(linear, left top, left bottom, from(#6a696d), color-stop(50%, #504949), color-stop(50%, #acbbd7), to(#acbbd7));
  background: #acbbd7 100% linear-gradient(#6a696d 0%, #504949 50%, #acbbd7 50%, #acbbd7 100%);
  background-size: auto 10em;
  background-repeat: repeat-x;
  background-position: center top;
}

header {
  position: relative;
  width: 100% !important;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
  /* margin-top:5% !important; */
  grid-row: 1 / 3;
  grid-column: 2;
  background: url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/154571/bla.jpg");
  background-size: cover;
  background-position: right center;
}
header a {
  position: absolute;
  top: var(--logo-offset);
  left: var(--logo-offset);
  display: block;
  width: var(--logo-width);
}
header img {
  display: block;
  max-width: 100%;
  height: 100%;
  margin-top: 2% !important;
}
footer{
  margin-top: 10% !important;
}
@media screen and (max-width: 700px){
  header {
  position: relative;
  height: 10em;
  width: 95% !important;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
  margin-top:5% !important;
  grid-row: 1 / 3;
  grid-column: 2;
  background: url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/154571/bla.jpg");
  background-size: cover;
  background-position: right center;
}
}
main {
  padding: var(--var-padding);
  grid-row: 2;
  grid-column: 1;
  margin-top: 2% !important;
  background: #fff;
    width: 95% !important;

  min-height: 200px !important;
}
main h1 {
  margin-top: 0;
  font-weight: normal;
}
main h1 span {
  display: block;
  color: var(--highlight);
  font-weight: bolder;
}
main h1 sub {
  font-size: .5em;
}
main a {
  color: var(--highlight);
  text-decoration: none;
}
main a::after {
  margin-left: 1.5em;
  content: 'â†’';
  vertical-align: baseline;
}
main a:hover, main a:focus {
  color: var(--highlight-dark);
}
main a:hover::after, main a:focus::after {
  margin-left: 2em;
}

html {
  min-height: 100vh;
  font-family: sans-serif;
  line-height: 1.5;
  background: linear-gradient(45deg, #f1f0ef, #d1cac7);
  background-repeat: no-repeat;
  background-size: cover;
}

.pcut{

   max-width: 400px; 
   height: 50px;
   font-size: 15px;
   text-align: justify;
  overflow: hidden;
  text-overflow: ellipsis !important; 

    }
.tcut{
   max-width: 420px !important; 
   text-align: justify;
   font-size: 18px;

    }
@media (min-width: 37.5em) {
  :root {
    --var-padding: 3em;
  }


  .app {
    display: grid;
    margin: 1em auto;
    padding-top:-10px !important;
    grid-template-rows: 5em auto;
    grid-template-columns: 1.4fr 1fr;
    padding-left: 2em;
    background-size: auto;
  }
  .app::after {
    position: absolute;
    right: 1em;
    left: 1em;
    bottom: 0;
    z-index: -1;
    width: 95%;
    height: 200px;
    content: '';
    box-shadow: 0 0 5em #7d604f;
  }

  header {
    height: auto;
  }
  header a {
    right: var(--logo-offset);
    left: auto;
  }
  

  main {
    width: 100% !important;
    
  }
}
.list-wrapper {
	padding: 15px;
	overflow: hidden;
}

.list-item {
	border: 1px solid #EEE;
	background: #FFF;
	margin-bottom: 10px;
	padding: 10px;
	box-shadow: 0px 0px 10px 0px #EEE;
}

.list-item h4 {
	color: #FF7182;
	font-size: 18px;
	margin: 0 0 5px;	
}

.list-item p {
	margin: 0;
}

.simple-pagination ul {
	margin: 0 0 20px;
	padding: 0;
	list-style: none;
	text-align: center;
}

.simple-pagination li {
	display: inline-block;
	margin-right: 5px;
}

.simple-pagination li a,
.simple-pagination li span {
	color: #666;
	padding: 5px 10px;
	text-decoration: none;
	border: 1px solid #EEE;
	background-color: #FFF;
	box-shadow: 0px 0px 10px 0px #EEE;
}

.simple-pagination .current {
	color: #FFF;
	background-color: #FF7182;
	border-color: #FF7182;
}

.simple-pagination .prev.current,
.simple-pagination .next.current {
	background: #e04e60;
}
</style>













