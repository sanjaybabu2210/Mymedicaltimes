<h2 style="text-align:center;margin-top:2%" id="main"><b>User Details</b></h2>

<table style="margin:5% 7%;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);overflow: auto;display:inline-block;background-color: transparent;">
  <tr>
    <th>Email</th>
    <th>Full Name</th>
    <th>College</th>
    <th>Article Permission</th>
    <th>News Permission</th>
  </tr>
   <% use.forEach(function(u){ %>
  <tr>
    <td><%= u.email %></td>
    <td><%= u.fullName %></td>
    <td><%= u.college %></td>
    <% if (u.writearticle===true){%>
    <td><a  href="/removeAccess/<%= u._id %>"><button class="btn btn-danger btn-sm" style="color:#ffffff;text-decoration:None">Remove Access</button></a></td>
    <% } else { %>
     <td><a  href="/grantAccess/<%= u._id %>"><button class="btn btn-success btn-sm" style="color:#ffffff;text-decoration:None">Grant Access</button></a></td>
     <% } %>
     <% if (u.writenews===true){%>
    <td><a  href="/removeNewsAccess/<%= u._id %>"><button class="btn btn-danger btn-sm" style="color:#ffffff;text-decoration:None">Remove Access</button></a></td>
    <% } else { %>
     <td><a  href="/grantNewsAccess/<%= u._id %>"><button class="btn btn-success btn-sm" style="color:#ffffff;text-decoration:None">Grant Access</button></a></td>
     <% } %>
  </tr>
  <% }) %>
  
  
</table>



