    }

    .icc {
      width: 35px;
      height: 35px;
    }

    .icc:hover {
      opacity: 0.6;
    }

    .sBlog:hover {
      box-shadow: 6px 8px 8px 6px rgba(0, 0, 0, 0.9);
    }

    .mainNew:hover {

      background: rgba(255, 255, 255, 0.9);
    }

    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 80%;
    }

    td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    th {
      border: 1px solid #dddddd;
      text-align: left;
      width: 20%;
      padding: 8px;
      background: #ffffff;
    }

    tr:nth-child(even) {
      background-color: #f1f1f1;
    }

    tr:nth-child(odd) {
      background-color: #ffffff;
    }
