    }

    .icc {
        width: 35px;
        height: 35px;
    }

    .icc:hover {
        opacity: 0.6;
    }

    .sBlog:hover {
        box-shadow: 6px 8px 8px 6px rgba(0, 0, 0, 0.9);
    }

    .mainNew:hover {

        background: rgba(255, 255, 255, 0.9);
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 85%;
    }

    td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
        width: 15%;
        background: #ffffff;
    }

    tr:nth-child(even) {
        background-color: #f1f1f1;
    }

    tr:nth-child(odd) {
        background-color: #ffffff;
    }

    @media screen and (min-width: 800px) {
        .sidebar {
            display: none;
        }



    }
</style>





<% if(error.length>0){%>
<div class="alert alert-danger container" style="margin-top:0px;"><%=error%></div>
<% }if(success.length>0){%>
<div class="alert alert-success container" style="margin-top:0px;"><%=success%></div>
<% } %>

<h2 style="text-align:center;margin-top:2%;margin-left: 5%;"><b>View Article Details</b></h2>

<table
    style="margin:5%;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);margin-top:2%;margin-bottom:45%;overflow: auto;display:inline-block;background-color: transparent;">
    <tr>
        <th>Articl Title</th>
        <th>Main Heading</th>
        <th>Sub Heading</th>
        <th>Author</th>
                <th>Featured </th>

        <th>Edit </th>
        <th>Delete</th>

    </tr>
    <% use.forEach(function(u){ %>
    <tr>
        <td><%= u.title %> </td>
        <td><%= u.mainHeading %> </td>
        <td><%= u.subHeading %> </td>
        <td><%= u.author %> </td>
        <% if(u.isfeatured){ %>
<td><button class="btn btn-danger btn-sm"><a style="text-decoration: none;color:white;"
            href="/removefeatured/<%= u._id %>">Remove</a> </button></td>
            <% }else{ %>
<td><button class="btn btn-info btn-sm"><a style="text-decoration: none;color:white;"
            href="/makefeatured/<%= u._id %>">Add</a> </button></td>

                <% }; %>
               

        <td><button class="btn btn-success btn-sm"><a style="text-decoration: none;color:white;" href="/<%= u._id %>/edit">Edit</a> </button></td>
        <td><form id="delete-form" action="/writearticle/<%= u._id %>?_method=DELETE" method="POST"><button class="btn btn-danger btn-sm" type="submit">Delete</button> </form></td>

    </tr>
    <% }) %>

</table>


<div style="position: relative;bottom: 0px; width: 100%;margin-top:100vh;">
    <%- include('partials/footertemplate.ejs'); -%>

</div>
</body>

</html>